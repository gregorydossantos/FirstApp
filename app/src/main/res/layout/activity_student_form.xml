<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText android:id="@+id/activity_student_form_name"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:hint="@string/name"
            android:inputType="textCapWords"
            android:layout_height="wrap_content"
            android:importantForAutofill="no" />

        <EditText android:id="@+id/activity_student_form_phone"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:hint="@string/_11_phone"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:importantForAutofill="no" />

        <EditText android:id="@+id/activity_student_form_email"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:importantForAutofill="no" />

        <!--
        <Button android:id="@+id/activity_student_form_save_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Save"
            android:layout_height="wrap_content" />
        -->

    </LinearLayout>
</ScrollView>